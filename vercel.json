{
  "version": 2,  
  "buildCommand": "pip install -r requirements.txt",
  "installCommand": "apt-get update && apt-get install -y ffmpeg",
  "framework": "python",  
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "front/**",
      "use": "@vercel/static"
    },
    {
      "src": "model/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/model/(.*)",
      "dest": "/model/$1"
    },
    {
      "src": "/css/(.*)",
      "dest": "/front/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/front/js/$1"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ]
}
